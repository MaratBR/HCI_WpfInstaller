<Window x:Class="InstallerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstallerWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <TextBox Margin="10">
            Terms of Service
            
            By using this app you sell your body and soul to the author of this software
        </TextBox>
        <StackPanel Grid.Row="1">
                <CheckBox HorizontalAlignment="Center" x:Name="TermsCheckbox">I have read and understood The Terms of Service</CheckBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="NextButton" 
                        Content="Next" 
                        Margin="10" Padding="4"
                        Click="NextButton_Click" />
                <Button x:Name="CancelButton" 
                        Content="Cancel" 
                        Margin="10" Padding="4"
                        Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
        <Label />
    </Grid>
</Window>
